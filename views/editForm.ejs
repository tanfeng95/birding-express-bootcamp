<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <title>edit sightings</title>

  <head>

  </head>

<body>
  <div class="container p-2 m-2">

    <div>
      <div class='d-flex justify-content-between m-2 p-2'>
        <h1>Edit sighting data</h1>
        <button class="btn btn-primary"><a class="text-white" style="text-decoration:none" href='/'>return to
            index</a></button>
      </div>
    </div>
    <form action="/sighting/<%=id%>/edit?_method=PUT" method="POST">
      <label class="form-label" for="label">habitat
      </label><br />
      <input class="form-control input-large" type="text" id="label" name="habitat" value="<%= habitat %>" /><br />
      <label class="form-label" for="ingredients">date:

      </label><br />
      <input class="form-control" type="datetime-local" id="ingredients" name="date" value="<%= date%>" /><br />
      <label class="form-label" for="ingredients">appearance</label><br />
      <input class="form-control" type="text" id="appearance" name="appearance" value="<%= appearance%>" /><br />
      <label class="form-label" for="ingredients">behaviour</label><br />
      <input class="form-control" type="text" id="behaviour" name="behaviour" value="<%= behaviour%>" /><br />
      <label class="form-label" for="ingredients">vocalisations</label><br />
      <input class="form-control" type="text" id="vocalisations" name="vocalisations"
        value="<%= vocalisations%>" /><br />
      <label class="form-label" for="ingredients">flocksize</label><br />
      <input class="form-control" type="number" id="flocksize" name="flocksize" value="<%= flocksize%>" /><br />


      <button type="submit" class="btn btn-primary">Submit</button>
    </form>


  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
</body>

</html>